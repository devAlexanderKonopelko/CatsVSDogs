<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentDogs">

    <Button
        android:id="@+id/clickDogs"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/click"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/textDogs"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/clickDogs"
        app:layout_constraintStart_toEndOf="@+id/playerDogs"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/playerDogs"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:text="@string/player_two"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/clickDogs"
        app:layout_constraintEnd_toStartOf="@+id/textDogs"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/animationsDogs"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textDogs" />

</androidx.constraintlayout.widget.ConstraintLayout>